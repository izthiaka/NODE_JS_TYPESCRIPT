{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./build",
        "rootDir": "./",
        "target": "es6",
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "core/**/*",
        "features/**/*",
        "routes/**/*",
        "services/**/*",
        "views/**/*",
        "app.ts",
        "server.ts"
    ]
}
